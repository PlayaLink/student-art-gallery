<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center">Edit <%= artpiece.name %></h1>
    <div style="width: 30%; margin: 40px auto">
        <form action="/artpieces/<%= artpiece._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%= artpiece.name %>" name="artpiece[name]">
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" value="<%= artpiece.url %>" name="artpiece[url]">
            </div>
            
            <div class="form-group">
                <textarea class="form-control" type="text" name="artpiece[description]"><%= artpiece.description %></textarea>
            </div>
            
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a class="btn btn-primary"  href="/artpieces">Go back</a>
    </div>
</div>

<% include ../partials/footer %>